
@model List<Icecream>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}


<div class="container mt-3">
    <div class="d-flex justify-content-between">
        <h2>Icecreams</h2>
        <a class="btn btn-success" asp-action="Create">Create Banner</a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Banner Photo
                    </th>
                    <th>
                        Settings
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var icecream in Model)
                {
                    <tr>
                        <td>
                           @count 
                        </td>
                        <td>
                            <img src="~/assets/img/@icecream.Image" style="width:100px;height:100px" alt="Alternate Text" />
                        </td>
                        <td>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@icecream.Id">Edit</a>

                            <form style="display:inline-block" method="post" asp-action="Delete" asp-route-id="@icecream.Id">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                            <a class="btn btn-info" asp-action="Detail" asp-route-id="@icecream.Id">Detail</a>
                        </td>

                    </tr>

                    count++;
                }

            </tbody>
        </table>
    </div>
</div>






